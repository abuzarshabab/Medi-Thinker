<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta />
    <title>Product Billing</title>
    <link rel="stylesheet" href="/css/layout.css" type="text/css" />
    <link rel="stylesheet" href="/css/manageProduct.css" type="text/css"/>
    <link rel="stylesheet" href="/css/searchBar.css" type="text/css" />
    
    <script
    src="https://kit.fontawesome.com/434a835bd6.js"
    crossorigin="anonymous"
  ></script>
  </head>
  <body>
    <div class="container">
      <!-- ```This is for header -->
      <%- include('include/header.ejs') %>
      <div class="content">
        <!-- This is foor left Nav -->
        <%- include('include/left.ejs') %>

        <div class="content-middle">
          <!-- This is for product navBar -->
          <div class="middle-navbar">
            <form method="POST" action="adminSell/searchProduct">
              <div class="search-box">
                <input
                  class="search-txt"
                  type="text"
                  name="searchValue"
                  placeholder="search"
                />
                <button type="submit" class="search-btn">
                <i class="fas fa-search"></i>
                </button>
              </form>
            </div>
          </div>
          <div class="middle-table">
            <table class="stock-table">
              <tr class="table-top" >
                  <th colspan="10" class="table-top-data">
                    Products
                  </th>
              </tr>
              <tr>
                <th class="table-header">Product Name</th>
                <th class="table-header">Type</th>
                <th class="table-header">EXP</th>
                <th class="table-header">Type</th>
                <th class="table-header">Purchase</th>
                <th class="table-header">Selling</th>
                <th class="table-header">Quantity</th>
                <th class="table-header">SubUnits</th>
                <th class="table-header">Image</th>  
                <th class="table-header"> MoreDetails</th>
              </tr>

              <% product.forEach (product => { %>
              <tr>
                <td>  <%=  product.productName %>   </td>
                <td>  <%=  product.productType %>   </td>
                <td>  <%=  product.productExp  %>    </td>
                <td>  <%=  product.productType %>   </td>
                <td>  <%=  product.productMpp  %>    </td>
                <td>  <%=  product.productMrp  %>    </td>
                <td>  <%=  product.units %>         </td> 
                <td>  <%=  product.subUnits %>      </td>
                <td>  <img class="table-icon" src="/images/products/<%=  product.productImageUrl %>" alt="<%=  product.productImageUrl %>">  </td>

                <td> <a class="table-button" href="/admin/sellProduct/<%= product._id %>">  Sell </a> </td>
              </tr>
              <% }) %>
            </table>
          </div>
        </div>

        <div class="content-right"></div>
      </div>
    </div>
  </body>
</html>
